
import React, { useState } from 'react';

const MiniGame: React.FC<{onScore: (p: number) => void}> = ({ onScore }) => {
  const [playing, setPlaying] = useState(false);
  const [score, setScore] = useState(0);

  const handleGameEnd = () => {
    onScore(score * 10);
    setPlaying(false);
  };

  return (
    <div className="h-full flex flex-col items-center justify-center p-10">
      {!playing ? (
        <div className="text-center space-y-6">
          <h2 className="font-round text-3xl text-gray-700">Sweet Jump</h2>
          <p className="font-round text-gray-400 italic">ì í”„í•´ì„œ ì¥ì• ë¬¼ì„ í”¼í•˜ì„¸ìš”!</p>
          <button onClick={() => {setPlaying(true); setScore(0);}} className="px-12 py-4 bg-[#FF9E9E] text-white rounded-3xl font-round text-xl shadow-lg">ê²Œì„ ì‹œì‘</button>
        </div>
      ) : (
        <div className="text-center space-y-10" onClick={() => setScore(s => s + 1)}>
          <p className="font-round text-6xl text-[#FF9E9E]">{score}</p>
          <div className="w-32 h-32 bg-rose-50 rounded-full flex items-center justify-center text-5xl mx-auto animate-bounce">ğŸƒ</div>
          <p className="font-round text-gray-300">í™”ë©´ì„ í„°ì¹˜í•´ì„œ ì ìˆ˜ ì˜¬ë¦¬ê¸°!</p>
          <button onClick={handleGameEnd} className="text-gray-300 font-round">ê·¸ë§Œí• ë˜ìš”</button>
        </div>
      )}
    </div>
  );
};

export default MiniGame;
